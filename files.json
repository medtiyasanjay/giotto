{
    "giotto": {
        "options": {
            "banner": "src/banner.js"
        },
        "src": ["src/open.js",
                "src/utils/*.js",
                "src/core/defaults.js",
                "src/core/paper.js",
                "src/core/svg.js",
                "src/core/viz.js",
                "src/core/data.js",
                "src/core/private/*.js",
                "src/canvas/*.js",
                "src/core/canvas.js",
                "src/viz/*.js",
                "src/plugins/*.js",
                "src/math/*.js",
                "src/close.js"],
        "dest": "dist/giotto.js"
    },
    "giottoweb": {
        "src": ["src/giottoweb/open.js",
                "src/giottoweb/close.js"],
        "dest": "giottoweb/media/giottoweb/giottoweb.js",
        "minify": false
    },
    "examples": {
        "src": ["examples/*/*.js"]
    }
}
